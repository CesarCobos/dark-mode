include ./components/_mixins.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet", href="./css/styles.css")
    
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        //- Sans Serif Font
        
        link(href="https://fonts.googleapis.com/css2?family=Spartan:wght@100;200;400;600;800;900&display=swap" rel="stylesheet")
        
        title Document
    body#dark.trans-5s
        header.flex.flex-items-center.flex-justify-center
            div.navbar.flex.flex-spacebetween.flex-items-center.trans-5s#nav
                div.navbar-left.flex.flex-items-center
                    p Lorem
                    i#social.fab.fa-twitter
                div.menu-button.flex.flex-justify-center.flex-items-center
                    button.collapse(type="button")
                        i#menuButton(onClick="menuOpen()" 
                            class= "fas fa-chevron-up")
                    div.menu-content
                        +menuBar() 

                div.navbar-right.flex.flex-justify-center.flex-items-center
                    div.menu-bar
                        +menuBar() 

                    button#buttonDmode( 
                        onClick="toggle_dark_mode()" 
                        class=" switch trans-5s flex flex-items-center flex-justify-center ")
                        span(
                            class=" sp1 flex flex-items-center")
                            span(
                                class="sp2")
                    
        main.trans-inherit

        script(src="./js/script.js")
        script(src="https://kit.fontawesome.com/32dce108fb.js" crossorigin="anonymous") 

        